{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    // повзволяет не импортировать React в каждый файл
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    // Allow 'import x from y' when a module doesn't have a default export. (без ... * as ... from ...)
    "allowSyntheticDefaultImports": true,
    // позволяет работать с либами на commonjs как с обычными export/import
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
  // "include": ["./config/jest/jest-setup.ts"]
}
