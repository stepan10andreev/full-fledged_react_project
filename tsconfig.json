{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    // Allow 'import x from y' when a module doesn't have a default export. (без ... * as ... from ...)
    "allowSyntheticDefaultImports": true,   
    // позволяет работать с либами на commonjs как с обычными export/import          
    "esModuleInterop": true, 
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}